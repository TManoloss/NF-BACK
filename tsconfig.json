{
  "compilerOptions": {
    "target": "ES6",               // Define a versão do JavaScript gerada
    "module": "commonjs",          // Define o sistema de módulos
    "outDir": "./dist",            // Pasta onde os arquivos compilados serão salvos
    "rootDir": "./src",            // Pasta onde estão os arquivos TypeScript
    "strict": true,                // Habilita verificações rigorosas de tipo
    "esModuleInterop": true,       // Permite a interoperabilidade entre CommonJS e ES Modules
    "skipLibCheck": true,          // Ignora a verificação de tipos nas bibliotecas
    "forceConsistentCasingInFileNames": true // Força consistência no uso de maiúsculas/minúsculas
  },
  "include": ["src/**/*"],         // Inclui todos os arquivos na pasta src
  "exclude": ["node_modules"]      // Exclui a pasta node_modules
}